<nav class="navbar navbar-default" id="header">
  <div class="container-fluid">
    <%= link_to "Hondana", root_url, class: "navbar-brand" %>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <%= form_tag(is_user_context ? search_user_path(current_user) : "/search", id: "search-form", class: "navbar-form navbar-left") do |f| %>
        <div id="search-selector" class="input-group">
         <div class="input-group-btn">
           <button id="search-selector-btn" type="button" class="form-control btn btn-default dropdown-toggle search-selector-btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= is_user_context ? "my bookshelf" : "all users" %></button>
           <ul class="dropdown-menu">
             <% if logged_in? %>
               <li><a href="#">my bookshelf</a></li>
             <% end %>
             <li><a href="#">all users</a></li>
           </ul>
         </div>
          <input id="search-field" type="text" class="form-control" name="keywords" placeholder="search in <%= is_user_context ? "my bookshelf" : "all users" %>">
        </div>
        <button type="submit" class="btn btn-default">search</button>
      <% end %>

      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
        <li><a href="<%= new_review_path %>">write review  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.name %><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "mypage", user_path(current_user) %></li>
            <li><%= link_to "edit profile", edit_user_path(current_user) %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to "logout", logout_path, method: :delete %></li>
          </ul>
        </li>
        <% else %>
            <li><%= link_to "sign up", new_user_path %></li>
            <li><%= link_to "login", login_path %></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
